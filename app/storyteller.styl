#scene
  position absolute
  height 80%
  width 100%
  text-align center
  img
    height 50%
    width 50%

#subtitle
  position absolute
  top: 80%
  left 0
  width 100%
  height: 20%
  font-size 2.5rem
  font-family Helvetica
  text-align center
  color white

#prev-btn
  position absolute
  height 100%
  width 10%
  left 0
  cursor pointer

#prev-btn:hover
  background -webkit-linear-gradient(left,#AAA,transparent)
  background -moz-linear-gradient(left,#AAA,transparent)
  background -o-linear-gradient(left,#AAA,transparent)
  background linear-gradient(left,#AAA,transparent)

#next-btn
  position absolute
  height 100%
  width 10%
  right 0
  cursor pointer

#next-btn:hover
  background -webkit-linear-gradient(right,#AAA,transparent)
  background -moz-linear-gradient(right,#AAA,transparent)
  background -o-linear-gradient(right,#AAA,transparent)
  background linear-gradient(right,#AAA,transparent)

#time
  position absolute
  color white
  font-size 1.5rem
  bottom 0
  left 0

#progress
  position absolute
  color white
  font-size 1.5rem
  bottom 0
  right 0

#screen
  position absolute
  width 100%
  height 100%
  opacity 0.8
  background-color #999
  cursor pointer

  #play-symbol

    circle
      stroke white
      stroke-width 10
      fill transparent

    polygon
      fill white

